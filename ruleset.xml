<?xml version="1.0"?>
<ruleset name="Monday Factory">
    <description>Monday Factory coding standards</description>
    <rule ref="./vendor/monday-factory/php-code-checker/ruleset.xml">
        <exclude name="SlevomatCodingStandard.PHP.DisallowReference.DisallowedPassingByReference"/>
    </rule>
    <rule ref="SlevomatCodingStandard.Files.TypeNameMatchesFileName">
        <properties>
            <property name="rootNamespaces" type="array">
                <element key="src" value="MondayFactory\DatabaseModel"/>
            </property>
        </properties>
    </rule>
</ruleset>
