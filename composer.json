{
	"name": "monday-factory/database-model",
	"type": "library",
	"description": "",
	"keywords": ["MondayFactory", "database"],
	"homepage": "https://gitlab.mondayfactory.cz/mondayfactory/database-model",
	"license": ["MIT"],
	"support": {
		"issues": "https://gitlab.mondayfactory.cz/mondayfactory/database-model/issues"
	},
	"authors": [
		{
			"name": "Petr Besir Horáček",
			"homepage": "https://mondayfactory.cz"
		}
	],
	"autoload": {
		"psr-4": {
			"MondayFactory\\DatabaseModel\\": "src/"
		}
	},
	"repositories": {
		"code-checker": {
			"type": "vcs",
			"url": "ssh://git@gitlab.mondayfactory.cz:2222/mondayfactory/php-code-checker.git"
		}
	},
	"require": {
		"php": ">=7.4",
		"nette/utils": "^3.0",
		"dibi/dibi": "^4.0"
	},
	"require-dev": {
		"phpstan/phpstan": "^0.12",
		"phpstan/phpstan-strict-rules": "^0.12",
		"monday-factory/php-code-checker": "dev-beta"
	},
	"scripts": {
		"app:phpstan": "vendor/bin/phpstan analyse src -c phpstan.neon --level 7",
		"app:phpcs": "vendor/bin/phpcs --standard=ruleset.xml --extensions=php,phpt --tab-width=4 --ignore=temp -sp src",
		"app:phpcsfix": "vendor/bin/phpcbf --report=diff --standard=ruleset.xml --extensions=php,phpt --tab-width=4 --ignore=temp -p src",
		"app:all": [
			"@app:phpstan",
			"@app:phpcs"
		]
	}
}
